          "name": "Hello World",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:3001/api/hello",
              "host": ["{{base_url}}"],
              "port": "3001",
              "path": ["api", "hello"]
            },
            "description": "Returns a hello message from Armature."
          }
        },
        {
          "name": "Echo Message",
          "request": {
            "method": "POST",
            "header": [
